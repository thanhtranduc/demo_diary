<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/red">
        <com.example.material.MaterialMenuView
                android:id="@+id/main_material_menu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:mm_strokeWidth="1"
                app:mm_color="@color/white"
                app:mm_transformDuration="2000"
                app:mm_scale="1"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/main_material_menu_button"
                  android:text="BP"
                  android:textStyle="bold"
                  android:layout_centerInParent="true"
                  android:textSize="20dp"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerInParent="true"
                   android:background="@drawable/ic_action_line_chart"/>
    </RelativeLayout>

    <android.support.v4.widget.DrawerLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:id="@+id/main_drawer_layout">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">

            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:id="@+id/main_frameLayout">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:orientation="vertical">


                    <LinearLayout
                            android:orientation="horizontal"
                            android:background="@color/gray"
                            android:weightSum="10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <RelativeLayout android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:visibility="invisible"
                                        android:id="@+id/diary_item_rlCardiac"
                                        android:layout_gravity="bottom"
                                        android:background="@color/gray">
                            <ImageView android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:id="@+id/diary_item_ivCardiac"
                                       android:background="@drawable/ic_notif_logo"/>
                        </RelativeLayout>
                        <TextView android:layout_width="0dp"
                                  android:layout_weight="2.5"
                                  android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:layout_gravity="center"
                                  android:id="@+id/diary_item_tvSystol"
                                  android:textColor="@color/black"
                                  android:textSize="20dp"
                                  android:text="Systol"/>
                        <TextView android:layout_width="0dp"
                                  android:layout_weight="2.5"
                                  android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:layout_gravity="center"
                                  android:textColor="@color/black"
                                  android:textSize="20dp"
                                  android:id="@+id/diary_item_tvDiasol"
                                  android:text="Diastol"/>
                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:visibility="invisible"
                                   android:id="@+id/diary_item_imStatus"
                                   android:layout_gravity="center_vertical"
                                   android:background="@drawable/icon_arrow_drop_down"
                                />
                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/diary_item_imStatus"
                                   android:layout_gravity="center_vertical"
                                   android:background="@drawable/icon_arrow_drop_down"
                                />
                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/diary_item_imStatus"
                                   android:visibility="invisible"
                                   android:layout_gravity="center_vertical"
                                   android:background="@drawable/icon_arrow_drop_down"
                                />
                        <TextView android:layout_width="0dp"
                                  android:layout_weight="2"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/black"
                                  android:textSize="20dp"
                                  android:gravity="center"
                                  android:layout_gravity="center"
                                  android:id="@+id/diary_item_tvPulse"
                                  android:text="Pulse"/>
                        <TextView android:layout_width="0dp"
                                  android:layout_weight="3"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/black"
                                  android:textSize="20dp"
                                  android:gravity="center"
                                  android:layout_gravity="center"
                                  android:id="@+id/diary_item_tvTime"
                                  android:text="Time"/>

                    </LinearLayout>

                    <ListView
                        android:id="@+id/main_lvDiary"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:background="#ffffff"
                        android:choiceMode="singleChoice"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0dp"/>
                </LinearLayout>
            </FrameLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_above="@id/main_frameLayout"
                          android:layout_marginRight="20dp"
                          android:layout_marginBottom="20dp"
                          android:layout_alignParentRight="true"
                          android:layout_alignParentBottom="true">
                <ImageButton android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:id="@+id/main_ivAddDiary"
                             android:background="@drawable/ic_plus_button"
                        />
            </LinearLayout>
        </RelativeLayout>
        <ListView
                android:id="@+id/slider_list"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="#ffffff"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"/>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>

