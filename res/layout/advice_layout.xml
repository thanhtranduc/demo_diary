<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:background="@color/gray"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:id="@+id/rlInstruction"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:paddingBottom="15dp">
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/instruction_image"
                       android:layout_centerHorizontal="true"
                       android:background="@drawable/image_advice_instruction"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:id="@+id/instruction_title"
                      android:layout_below="@id/instruction_image"
                      android:layout_centerHorizontal="true"
                      android:gravity="center_horizontal"
                      android:text="Instruction"
                      android:textSize="30dp"
                      android:textColor="#FF9933"
                      android:textStyle="bold"
                    />
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="15dp"
                      android:layout_marginLeft="15dp"
                      android:id="@+id/instruction_description"
                      android:layout_below="@id/instruction_title"
                      android:layout_centerHorizontal="true"
                      android:gravity="center_horizontal"
                      android:textColor="@color/black"
                      android:text="@string/instruction"/>
            <View
                    android:id="@+id/line0"
                    style="@style/vertical_line_advices"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/instruction_description"
                    android:layout_width="wrap_content"
                    android:layout_height="1dip"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/learn_more_instruction"
                      android:layout_below="@id/line0"
                      android:layout_marginTop="15dp"
                      android:layout_marginRight="15dp"
                      android:layout_alignParentRight="true"
                      android:textSize="22dp"
                      android:textColor="#FF9933"
                      android:text="LEARN MORE"/>
        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rlSmoke"
                        android:background="@color/white"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:paddingBottom="15dp">
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/smoke_image"
                       android:layout_centerHorizontal="true"
                       android:background="@drawable/image_advice_smoke"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:id="@+id/smoke_title"
                      android:layout_below="@id/smoke_image"
                      android:layout_centerHorizontal="true"
                      android:gravity="center_horizontal"
                      android:text="We do not smoke!"
                      android:textSize="30dp"
                      android:textColor="#FF9933"
                      android:textStyle="bold"
                    />
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="15dp"
                      android:layout_marginLeft="15dp"
                      android:id="@+id/smoke_description"
                      android:layout_below="@id/smoke_title"
                      android:layout_centerHorizontal="true"
                      android:gravity="center_horizontal"
                      android:textColor="@color/black"
                      android:text="We strongly recommend you to quit smoking!"/>
            <View
                    android:id="@+id/line1"
                    style="@style/vertical_line_advices"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/smoke_description"
                    android:layout_width="wrap_content"
                    android:layout_height="1dip"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/line1"
                      android:layout_marginTop="15dp"
                      android:layout_marginRight="15dp"
                      android:layout_alignParentRight="true"
                      android:textSize="22dp"
                      android:id="@+id/learn_more_smoke"
                      android:textColor="#FF9933"
                      android:text="LEARN MORE"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:id="@+id/rlWeight"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:paddingBottom="15dp">
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/weight_image"
                       android:layout_centerHorizontal="true"
                       android:background="@drawable/image_advice_weight"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:id="@+id/weight_title"
                      android:layout_below="@id/weight_image"
                      android:layout_centerHorizontal="true"
                      android:gravity="center_horizontal"
                      android:text="Everything is good in moderation"
                      android:textSize="30dp"
                      android:textColor="#FF9933"
                      android:textStyle="bold"
                    />
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="15dp"
                      android:layout_marginLeft="15dp"
                      android:id="@+id/weight_description"
                      android:layout_below="@id/weight_title"
                      android:layout_centerHorizontal="true"
                      android:gravity="center_horizontal"
                      android:textColor="@color/black"
                      android:text="@string/weight"/>
            <View
                    android:id="@+id/line2"
                    style="@style/vertical_line_advices"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/weight_description"
                    android:layout_width="wrap_content"
                    android:layout_height="1dip"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/line2"
                      android:layout_marginTop="15dp"
                      android:layout_marginRight="15dp"
                      android:layout_alignParentRight="true"
                      android:textSize="22dp"
                      android:id="@+id/learn_more_weight"
                      android:textColor="#FF9933"
                      android:text="LEARN MORE"/>
        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:id="@+id/rlMeal"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:paddingBottom="15dp">
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/meal_image"
                       android:layout_centerHorizontal="true"
                       android:background="@drawable/image_advice_meal"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:id="@+id/meal_title"
                      android:layout_below="@id/meal_image"
                      android:layout_centerHorizontal="true"
                      android:gravity="center_horizontal"
                      android:text="We are what we eat"
                      android:textSize="30dp"
                      android:textColor="#FF9933"
                      android:textStyle="bold"
                    />
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="15dp"
                      android:layout_marginLeft="15dp"
                      android:id="@+id/meal_description"
                      android:layout_below="@id/meal_title"
                      android:layout_centerHorizontal="true"
                      android:gravity="center_horizontal"
                      android:textColor="@color/black"
                      android:text="@string/mean"/>
            <View
                    android:id="@+id/line3"
                    style="@style/vertical_line_advices"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/meal_description"
                    android:layout_width="wrap_content"
                    android:layout_height="1dip"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/line3"
                      android:layout_marginTop="15dp"
                      android:layout_marginRight="15dp"
                      android:layout_alignParentRight="true"
                      android:textSize="22dp"
                      android:textColor="#FF9933"
                      android:id="@+id/learn_more_eat"
                      android:text="LEARN MORE"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>