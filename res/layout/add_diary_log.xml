<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:background="@color/white"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:weightSum="1">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:gravity="center"
                          android:layout_weight="0.3">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/black"
                          android:layout_marginBottom="5dp"
                          android:text="Systolic"/>
                <NumberPicker android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/add_diary_log_np1">
                </NumberPicker>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:orientation="vertical"
                          android:layout_weight="0.3">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/black"
                          android:layout_marginBottom="5dp"
                          android:text="Diastolic"/>
                <NumberPicker android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/add_diary_log_np2">
                </NumberPicker>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:orientation="vertical"
                          android:layout_weight="0.3">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/black"
                          android:layout_marginBottom="5dp"
                          android:text="Pulse"/>
                <NumberPicker android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/add_diary_log_np3">
                </NumberPicker>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="70dp"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/black"
                      android:text="PLACE OF MEASUREMENT:"/>
            <!--<Spinner android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/icon_arrow_dropdown"-->
            <!--android:id="@+id/add_diary_log_spinner1"/>-->
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                <Spinner
                        android:id="@+id/add_diary_log_spinner1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/spinner_style"
                        android:spinnerMode="dropdown"
                        android:background="@null"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"/>
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:background="@drawable/icon_arrow_dropdown"
                           android:layout_alignParentRight="true"
                           android:layout_centerVertical="true"
                           android:id="@+id/imageView"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="70dp"
                      android:layout_marginLeft="20dp"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/black"
                      android:text="MEASUREMENT POSITION:"/>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                <Spinner
                        android:id="@+id/add_diary_log_spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/H8"
                        android:spinnerMode="dropdown"
                        android:background="@null"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"/>
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:background="@drawable/icon_arrow_dropdown"
                           android:layout_alignParentRight="true"
                           android:layout_centerVertical="true"
                           android:id="@+id/imageView"/>
            </RelativeLayout>

        </LinearLayout>
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="Enter a comment"
                  android:textColor="@color/black"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:id="@+id/add_diary_log_etComment"/>
        <CheckBox android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/add_diary_log_cbCardiac"
                  android:layout_marginLeft="20dp"
                  android:textSize="30dp"
                  android:textColor="@color/black"
                  android:text="cardiac arrhythmia"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@color/white"
                      android:weightSum="1">
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:textSize="25dp"
                      android:layout_weight="0.4"
                      android:textColor="@color/black"
                      android:id="@+id/add_diary_log_tvTime"
                      android:background="@color/gray"
                      android:text="11:11PM"
                      android:layout_marginRight="2dp"
                    />
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:background="@color/gray"
                      android:textColor="@color/black"
                      android:textSize="25dp"
                      android:layout_weight="0.6"
                      android:id="@+id/add_diary_log_tvDate"
                      android:text="month"/>
        </LinearLayout>
        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:id="@+id/add_diary_log_btAdd"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:textStyle="bold"
                android:text="ADD"/>
    </LinearLayout>
</ScrollView>