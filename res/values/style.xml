<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="vertical_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/trending_blue</item>
    </style>

    <style name="vertical_line_advices">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">.5dip</item>
        <item name="android:background">#FF9933</item>
    </style>

    <style name="vertical_line_dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">.5dip</item>
        <item name="android:background">@color/gray</item>
    </style>
    <style name="H10">  <!-- Bold, 47px, Black #000000, 0 0 0 -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="H8">  <!-- Regular, 47px, Gray #666666, 102 102 102 -->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="spinner_style">
        <item name="android:showDividers">none</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">@android:color/black</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:rowHeight">20dp</item>
        <item name="android:textColor">@color/black</item>

    </style>
</resources>